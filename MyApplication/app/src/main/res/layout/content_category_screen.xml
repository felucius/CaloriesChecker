<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_category_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="maximedelange.calorieschecker.Screens.CategoryScreen"
    tools:showIn="@layout/activity_category_screen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <ImageButton
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/btnBreakfast"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="150dp"
        android:backgroundTint="@android:color/holo_blue_dark" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/btnLunch"
        android:layout_below="@+id/btnBreakfast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_orange_light" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/btnDinner"
        android:layout_below="@+id/btnLunch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_red_light" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/btnCaloriesList" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/btnBreakfast"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/lblLunchShow"
                android:textSize="30sp"
                android:text="..."
                android:textStyle="normal|bold"
                android:textAlignment="center" />

            <TextView
        android:text="..."
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/btnLunch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lblDinnerShow"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <TextView
        android:text="..."
        android:layout_width="match_parent"
        android:id="@+id/lblBreakfastShow"
        android:layout_height="150dp"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
