<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <ImageView
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageproduct"
        android:layout_width="150dp" />

    <TextView
        android:text="TextView"
        android:id="@+id/txtproductname"
        android:layout_weight="0.24"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageproduct"
        android:layout_marginTop="17dp"
        android:layout_alignRight="@+id/txtamountofcalories"
        android:layout_alignEnd="@+id/txtamountofcalories" />

    <TextView
        android:text="TextView"
        android:layout_width="200dp"
        android:id="@+id/txtamountofcalories"
        android:layout_below="@+id/txtproductname"
        android:layout_toRightOf="@+id/imageproduct"
        android:layout_toEndOf="@+id/imageproduct"
        android:layout_height="25dp" />

    <TextView
        android:text="TextView"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:id="@+id/txtproducttype"
        android:layout_below="@+id/txtamountofcalories"
        android:layout_toRightOf="@+id/imageproduct"
        android:layout_toEndOf="@+id/imageproduct" />
</RelativeLayout>